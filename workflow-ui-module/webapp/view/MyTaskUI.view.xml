<mvc:View 
    controllerName="wiprofrm.workflowuimodule.controller.MyTaskUI"
    xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:table="sap.ui.table" xmlns:ta="sap.ui.table"
    xmlns:form="sap.ui.layout.form" xmlns:smartForm="sap.ui.comp.smartform" xmlns:smartField="sap.ui.comp.smartfield"
    xmlns="sap.m" xmlns:ui="sap.ui.table">
    
    <App id="app">
        <Page id="scroll" title="{i18n>title}">
            <content>
              <IconTabBar id="DisposalAssetIconTabId"
                    class="sapUiResponsiveContentPadding" select="IconTabBarSelect">
                    <items>
                        <IconTabFilter icon="sap-icon://request" id="data_Form"
                            text="PO Saving Form" key="PO_Form_Details" tooltip="{i18n>Request}"
                            class="MasterDataIconTabBar" design="Vertical">
                            <f:SimpleForm editable="true" id="form_simple"
                                layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3"
                                labelSpanM="3" labelSpanS="12" adjustLabelSpan="false"
                                emptySpanXL="1" emptySpanL="1" emptySpanM="1" emptySpanS="0"
                                columnsXL="2" columnsL="2" columnsM="2"
                                singleContainerFullSize="false">
                                <f:content>
                                    <core:Title text="" class="remove-space" />
                                
                                    <Label text="Create Saving Form against" required="true"
                                        class="sapMLabelNoText" />
                                    <ComboBox id="Create_Saving" 
                                        change="NewCompanyCodeChange" items="{/Employees}">
                                        <core:Item key="{FirstName}" text="{FirstName}" />
                                    </ComboBox>
                                    <Label text="Cluster" required="true"
                                        class="sapMLabelNoText" />
                                        <ComboBox id="Cluster" 
                                        change="NewCompanyCodeChange" items="{/Employees}">
                                        <core:Item key="{Address}" text="{Address}" />
                                    </ComboBox>
                                    
                                    <Label text="PO No" required="true"
                                        class="sapMLabelNoText" />
                                    <Input id="AssetTitleId" maxLength="50" value="4500428051" editable="true"></Input>
                                    <Label text="PO Value with Currency" required="true"
                                        class="sapMLabelNoText" />
                                    <Input id="Value_Currency" maxLength="50" value="1000"></Input>
                                        <Label text="Vendor Name" required="true"
                                        class="sapMLabelNoText" />
                                    <Input id="Vendor_Name" value="1001005 SVT LTD" maxLength="50"></Input>
                                    <Label text="Vendor Code" required="true"
                                        class="sapMLabelNoText" />
                                    <Input id="Vendor_Code" maxLength="50" value="1001005"></Input>
                                    <Label text="Category" required="true"
                                        class="sapMLabelNoText" />
                                        <ComboBox id="Category_" 
                                        change="NewCompanyCodeChange" items="{/Employees}">
                                        <core:Item key="{City}" text="{City}" />
                                    </ComboBox>
                        <Label text="Project Description"
                                        class="sapMLabelNoText" />
                                    <TextArea id="Description" rows="3.5" maxLength="250"
                                        showExceededText="true" />
                                    
                                    
                            <Label text="Region" required="true"
                                        class="sapMLabelNoText" />
                                    <Input id="Region" maxLength="50"></Input>

                                    <Label text="Saving Start Date"
                                        class="sapMLabelNoText" />
                                    <DatePicker displayFormat="dd-MMM-yyyy"
                                        valueFormat="yyyy-MM-ddT00:00:00" id="Saving_start">
                                    </DatePicker>
                                    <Label text="Saving End Date"
                                        class="sapMLabelNoText" />
                                    <DatePicker displayFormat="dd-MMM-yyyy"
                                        valueFormat="yyyy-MM-ddT00:00:00" id="Saving_End">
                                    </DatePicker>
                                      <Label text=""
                                        class="sapMLabelNoText" />
                   <ui:Table
                id="table_column"
                rows="{viewInfo>/items}" visible="false" visibleRowCount="5">
                <ui:extension>
                    <OverflowToolbar style="Clear">
                        <ToolbarSpacer />
                        <Button
                            icon="sap-icon://add"
                            text="Add"
                            type="Accept"
                            press="onCreate"
                            tooltip="Add New Item"
                        />
                       
                         <Button
                            icon="sap-icon://save"
                            text="Save"
                            type="Accept"
                            press="onSaveData"
                            tooltip="Add New Item"
                        />
                    </OverflowToolbar>
                </ui:extension>
                <ui:columns>
                    <ui:Column>
                        <Label text="Quarter" />
                        <ui:template>
                            <Input
                                value="{viewInfo>quarter}"
                                placeholder="Quarter"
                                ariaHasPopup="Dialog"
                            />
                        </ui:template>
                    </ui:Column>
                    <ui:Column>
                        <Label text="Saving" />
                        <ui:template>
                            <Input
                                value="{viewInfo>price}"
                                showSuggestion="true"
                                placeholder="Saving"
                                ariaHasPopup="Dialog"
                            />
                        </ui:template>
                    </ui:Column>
                </ui:columns>
            </ui:Table>
                                    <core:Title text="" class="remove-space" />

                                    
                            <Label text="Last Year PO No"
                                        class="sapMLabelNoText" />
                                    <Input id="po_no" maxLength="50"></Input>
                                        <Label text="Last Year PO Value" 
                                        class="sapMLabelNoText" />
                                    <Input id="po_value" maxLength="50"></Input>
                                    <Label text="Last Year PO Currency" 
                                        class="sapMLabelNoText" />
                                    <Input id="po_Currency" maxLength="50"></Input>

                                        <Label text="Attachment" 
                                        class="sapMLabelNoText" />
                                    <Input id="Attachment" maxLength="50"></Input>

                            <Label text="Quated Value"
                                        class="sapMLabelNoText" />
                                        <Input id="Quated" maxLength="50"></Input>
                                    
                            <Label text="Currency" required="true"
                                        class="sapMLabelNoText" />
                                        <ComboBox id="Currency_po" 
                                        change="NewCompanyCodeChange" items="">
                                        <core:Item key="INR" text="INR" />
                                    </ComboBox>
                                    <Label text="Order Value"
                                        class="sapMLabelNoText" /> <Input id="Order_Value" maxLength="50"></Input>
                                    
                                        <Label text="Savings" 
                                        class="sapMLabelNoText" />
                                    <Input id="po_Savings" maxLength="50"></Input>
                                    <Label text="Savings(%)" 
                                        class="sapMLabelNoText" />
                                    <Input id="po_Savings_auto" maxLength="50"></Input>
                                    <Label text="Saving Type" 
                                        class="sapMLabelNoText" />
                                        <ComboBox id="saving_type" 
                                        change="NewCompanyCodeChange" items="">
                                        <core:Item key="" text="" />
                                    </ComboBox>
                                    <Label text=""
                                        class="sapMLabelNoText" />
                                        <CheckBox text="Savings Distribution"  id="savingdistribution"
										class="attached" selected="false" select="onClick"   valueState="Success" width="140px" />
                                    <Input id="po_Savings_Distribution" maxLength="50" visible="false"></Input>
                                     <Label text="BFM Validation" 
                                        class="sapMLabelNoText" />
                                        <Input id="bfmValidation" maxLength="50" value="BFM"></Input>
                                   
                                        <Label text="YOY Saving-Function BFM Approval" required="true"
                                        class="sapMLabelNoText" />
                                        <Input id="Saving-Function" maxLength="50"></Input>
                                         
                                        
                                    
                                </f:content>
                            </f:SimpleForm>

                        </IconTabFilter>
                        

                    
                        

                        
                        


                    </items>
                </IconTabBar>

              
            </content>
        </Page>
    </App>
</mvc:View>
