<mvc:View 
    controllerName="wipro.workflowuimodule.controller.List"
    xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:table="sap.ui.table" xmlns:ta="sap.ui.table"
    xmlns:form="sap.ui.layout.form" xmlns:smartForm="sap.ui.comp.smartform" xmlns:smartField="sap.ui.comp.smartfield"
    xmlns="sap.m" xmlns:ui="sap.ui.table" >
    
    <App id="app">
        <Page id="List" title="{i18n>listtitle}">
            <content>
		<ta:Table id="AssetListDataTable"
								selectionMode="None" rows="{PoDataModel>/}" sort="sortDeliveryDate"
								ariaLabelledBy="title"  alternateRowColors="true">
								<ta:extension>
									<!-- <OverflowToolbar>
										<ToolbarSpacer />
										
										<Button  id="TriggerWF2" text="{i18n>Trigger}"
											press="naivgateToTaskUI" type="Accept"></Button>
									
										
									</OverflowToolbar> -->
								</ta:extension>
								<ta:columns>
									
									<ta:Column >
										<Label text="{i18n>PONumber}" tooltip="{i18n>PONumber}"
											design="Bold" />
										<ta:template>
											<Text text="{PoDataModel>PONumber}" id=""/>
										</ta:template>
									</ta:Column>
									<ta:Column >
										<Label text="{i18n>Buyer}"
											tooltip="{i18n>Buyer}" design="Bold" />
										<ta:template>
											<Text text="{PoDataModel>Buyer}" />
										</ta:template>
									</ta:Column>
									<ta:Column >

										<Label text="{i18n>POValue}" tooltip="{i18n>POValue}"
											design="Bold"></Label>

										<ta:template>
											<Text text="{PoDataModel>POValue}"></Text>
										</ta:template>
									</ta:Column>
									<ta:Column >
										<Label text="{i18n>POCurrency}" tooltip="{i18n>POCurrency}"
											design="Bold" />
										<ta:template>
											<Text text="{PoDataModel>POCurrency}" />
										</ta:template>
									</ta:Column>
									<ta:Column >
										<Label text="{i18n>VendorName}" tooltip="{i18n>VendorName}"
											design="Bold" />
										<ta:template>
											<Text text="{PoDataModel>VendorName}" />
										</ta:template>
									</ta:Column>
									<ta:Column >
										<Label text="{i18n>Vendor}" tooltip="{i18n>Vendor}"
											design="Bold" />
										<ta:template>
											<Text text="{PoDataModel>Vendor}" />
										</ta:template>
									</ta:Column>
									<ta:Column >
										<Label text="{i18n>StartDate}"
											tooltip="{i18n>StartDate}" design="Bold" />
										<ta:template>
										<DatePicker displayFormat="dd-MMM-yyyy" editable="false" placeholder="Start Date" value="{PoDataModel>StartDate}"
                                        valueFormat="dd-MM-yyyy" id="Saving_StartList" change="handleChangeEnd"> </DatePicker>
											<!-- <Text text="{PoDataModel>StartDate}" /> -->
										</ta:template>
									</ta:Column>
									<ta:Column >
										<Label text="{i18n>EndDate}"
											tooltip="{i18n>EndDate}" design="Bold" />
										<ta:template>
										<DatePicker displayFormat="dd-MMM-yyyy" editable="false" placeholder="End Date" value="{PoDataModel>EndDate}"
                                        valueFormat="dd-MM-yyyy" id="Saving_EndList" change="handleChangeEnd"> </DatePicker>
											<!-- <Text text="{PoDataModel>EndDate}" /> -->
										</ta:template>
									</ta:Column>
									<ta:Column >
										<Label text="{i18n>TriggerWF}" tooltip="{i18n>TriggerWF}"
											design="Bold" />
										<ta:template>
											<Button  id="TriggerWorkFlow" text="{i18n>TriggerWF}"
											press="TigerButtonfunction" type="Accept"></Button>
										</ta:template>
									</ta:Column>
									

								</ta:columns>
							</ta:Table>
              
            </content>
        </Page>
    </App>
</mvc:View>
